<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_ui_bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.navigation_fragment.d.notification.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivArrowBack1"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/arrow_back"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:gravity="center"
            android:text="Уведомления"
            android:layout_marginStart="40dp"
            android:textColor="@color/text_default_light"
            android:textSize="30dp"
            app:layout_constraintStart_toEndOf="@+id/ivArrowBack1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:gravity="center"
            android:text="Не приходят?"
            android:textColor="#1D4DDD"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSettings1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_shape_graffit_r12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <LinearLayout
                android:id="@+id/llnotification1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:paddingTop="10dp"
                    android:text="Общие напоминания"
                    android:textColor="@color/text_default_light"
                    android:textSize="20dp" />

                <Switch
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="true"
                    android:trackTint="@drawable/switch_track_tint"
                    android:thumbTint="@drawable/switch_thumb_tint"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showBottomSheetButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="16dp"
                android:text="22:30"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_shape_graffit_light_r12"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llnotification1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showBottomSheetDay"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:text="Каждый день"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_shape_graffit_light_r12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llnotification1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSettings2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_shape_graffit_r12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clSettings1">

            <LinearLayout
                android:id="@+id/llnotification2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:paddingTop="10dp"
                    android:text="Утренние привычки"
                    android:textColor="@color/text_default_light"
                    android:textSize="20dp" />

                <Switch
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:trackTint="@drawable/switch_track_tint"
                    android:thumbTint="@drawable/switch_thumb_tint"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:checked="true"
                    android:layout_weight="1"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showBottomSheetButton2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="16dp"
                android:text="08:20"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_shape_graffit_light_r12"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llnotification2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showBottomSheetDay2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:text="Каждый день"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_shape_graffit_light_r12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llnotification2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSettings3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_shape_graffit_r12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clSettings2">

            <LinearLayout
                android:id="@+id/llnotification3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:paddingTop="10dp"
                    android:text="Дневные привычки"
                    android:textColor="@color/text_default_light"
                    android:textSize="20dp" />

                <Switch
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:trackTint="@drawable/switch_track_tint"
                    android:thumbTint="@drawable/switch_thumb_tint"
                    android:checked="true"
                    android:layout_weight="1"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showBottomSheetButton3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="16dp"
                android:text="14:20"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_shape_graffit_light_r12"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llnotification3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showBottomSheetDay3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:text="Каждый день"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_shape_graffit_light_r12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llnotification3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSettings4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_shape_graffit_r12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clSettings3">

            <LinearLayout
                android:id="@+id/llnotification4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:paddingTop="10dp"
                    android:text="Вечерние привычки"
                    android:textColor="@color/text_default_light"
                    android:textSize="20dp" />

                <Switch
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:trackTint="@drawable/switch_track_tint"
                    android:thumbTint="@drawable/switch_thumb_tint"
                    android:checked="true"
                    android:layout_weight="1"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showBottomSheetButton4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="16dp"
                android:text="19:20"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_shape_graffit_light_r12"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llnotification4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showBottomSheetDay4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:text="Каждый день"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_shape_graffit_light_r12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llnotification4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/llnotification5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:background="@drawable/button_shape_graffit_r12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clSettings4"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/montserrat_extra_bold"
                android:text="Звуковые эффекты"
                android:textColor="@color/text_default_light"
                android:textSize="12sp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="#6F6F6F"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="система по умолчанию"
                android:paddingStart="5dp" />


            <ImageView
                android:id="@+id/ivArrowBack"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/arrow_back"
                android:rotationY="180"
                android:layout_gravity="center_vertical"
                app:tint="@color/white" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_sound"
            android:textColor="#6F6F6F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llnotification5"
            android:layout_marginHorizontal="15dp"
            android:paddingBottom="135dp"
            android:layout_marginTop="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


