<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_ui_bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.navigation_fragment.a.create_new_habit.habit_name.habit_days.HabitDaysFragment">

    <ImageView
        android:id="@+id/ivArrowBack1"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/arrow_back"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_extra_bold"
        android:gravity="center"
        android:text="Дни привычек"
        android:textColor="@color/text_default_light"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivArrowBack1"
        app:layout_constraintStart_toEndOf="@+id/ivArrowBack1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llWeekClose"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:paddingVertical="5dp"
        android:background="@drawable/button_shape_graffit_r12"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_extra_bold"
            android:paddingTop="10dp"
            android:layout_marginStart="10dp"
            android:paddingBottom="10dp"
            android:text="X д. в неделю"
            android:textColor="@color/text_default_light"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_icon_general_check_off"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llMounthClose"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:paddingVertical="5dp"
        android:background="@drawable/button_shape_graffit_r12"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_extra_bold"
            android:paddingTop="10dp"
            android:layout_marginStart="10dp"
            android:paddingBottom="10dp"
            android:text="X д. в неделю"
            android:textColor="@color/text_default_light"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_icon_general_check_on_green"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="6 д.в неделю"
            android:textColor="#9B9B9B"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <!-- Sunday -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_sunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_card_view_r12"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Monday -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_monday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_card_view_r12"

                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Tuesday -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_tuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_card_view_r12"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Wednesday -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_wednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_card_view_r12"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Thursday -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_card_view_r12"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Friday -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_friday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_card_view_r12"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Saturday -->

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#22888888"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llMounthClose" />




</androidx.constraintlayout.widget.ConstraintLayout>